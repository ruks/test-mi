<?xml version="1.0" encoding="UTF-8"?>
<localEntry key="SecureChoreoKafkaConnection" xmlns="http://ws.apache.org/ns/synapse">
  <kafkaTransport.init>
    <connectionType>KAFKASECURE</connectionType>
    <bootstrapServers>$SYSTEM:KAFKA_ENDPOINT</bootstrapServers>
    <keySerializerClass>org.apache.kafka.common.serialization.StringSerializer</keySerializerClass>
    <valueSerializerClass>org.apache.kafka.common.serialization.StringSerializer</valueSerializerClass>
    <sslKeyPassword>wso2carbon</sslKeyPassword>
    <sslKeystoreLocation>$SYSTEM:KEY_STORE_PATH</sslKeystoreLocation>
    <sslKeystorePassword>wso2carbon</sslKeystorePassword>
    <sslTruststoreLocation>$SYSTEM:TRUST_STORE_PATH</sslTruststoreLocation>
    <sslTruststorePassword>wso2carbon</sslTruststorePassword>
    <securityProtocol>SSL</securityProtocol>
    <name>SecureChoreoKafkaConnection</name>
  </kafkaTransport.init>
</localEntry>